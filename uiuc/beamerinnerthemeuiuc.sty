\mode<presentation>

\setbeamercolor*{body in head/foot}{parent=palette uiuc}
\setbeamercolor*{caption}{fg=UIneutralDark}

\setbeamertemplate{section in toc}[circle]
\setbeamertemplate{subsection in toc}{%
\leavevmode\leftskip=5.65ex%
  \llap{\raisebox{0.2ex}{\textcolor{structure}{$\blacktriangleright$}}\kern1ex}%
  \inserttocsubsection\par%
}

\setbeamertemplate{itemize subitem}{$\bullet$}

\setbeamertemplate{background}{
  \begin{tikzpicture}
    \useasboundingbox (0,0) rectangle (\the\paperwidth, \the\paperheight);
    \ifnum\thepage=1\relax %
    \fill[color=UIblue] (0,0) rectangle (\the\paperwidth, \the\paperheight);
    \node[above] at (0,0) {\includegraphics[height=\the\paperheight]{Illinois-Logo-Orange.pdf}};
    \fi
  \end{tikzpicture}
}

\defbeamertemplate*{title page}{uiuc}[1][]
{
  \vbox{}
  \begingroup
    % \vspace{0.3\paperheight}
    \begin{beamercolorbox}[leftskip=1in,sep=8pt,#1]{palette titlepage}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else
        \vskip0.25em%
        {\usebeamerfont{subtitle}\insertsubtitle\par}%
      \fi%
    \end{beamercolorbox}
    \vskip1em
    \begin{beamercolorbox}[leftskip=1in,sep=8pt,#1]{palette titlepage}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \begin{beamercolorbox}[leftskip=1in,sep=8pt,#1]{palette titlepage}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    \begin{beamercolorbox}[leftskip=1in,sep=8pt,#1]{palette titlepage}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}
  \endgroup
}

\defbeamertemplate*{section page}{uiuc}
{
    \begingroup
      \vbox{}
      \begin{beamercolorbox}[center]{section title}
        \usebeamerfont{section title}\insertsection\par
      \end{beamercolorbox}
    \endgroup
}

% Captions
\setbeamertemplate{caption}{\usebeamercolor{caption}\tiny\insertcaption}


% % Blocks
\defbeamertemplate{block begin}{uiuc}
{
  \par\vskip\medskipamount%
  \begin{beamercolorbox}[colsep*=.75ex,wd=\paperwidth,sep=1em,leftskip=1em,rightskip=1em]{block title}
    \usebeamerfont*{block title}\insertblocktitle%
    {\parskip0pt\par}%
    \ifbeamercolorempty[bg]{block title}
    {}
    {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
}
\defbeamertemplate{block end}{uiuc}  
{\end{beamercolorbox}\vskip\smallskipamount}


\mode<all>